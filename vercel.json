{
  "version": 2,
  "builds": [
    {
      "src": "api/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/analyze",
      "dest": "/api/analyze.py"
    },
    {
      "src": "/api/analyze-competitors",
      "dest": "/api/analyze-competitors.py"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}